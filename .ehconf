reviewit() {
    usage="Usage: reviewit COMMIT"
    example="\te.g. reviewit HEAD~2"

    if [ -z "$1" ]; then
        echo $usage
        echo -e $example
        return 1
    fi

    git push upstream "$1":estrom-review "${@:2}"
}

shipit() {
    usage="Usage: shipit COMMIT"
    example="\te.g. shipit HEAD~2"

    if [ -z "$1" ]; then
        echo $usage
        echo -e $example
        return 1
    fi

    git push upstream "$1":master "${@:2}"
}

